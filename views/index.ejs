<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Register</title>
  </head>
  <body>
      
    <%- include('./partials/header.ejs', {pageTittle: 'Register'}) %>

    <h1>Register</h1>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <form action="/registrar" method="POST" enctype="multipart/form-data">
        <% if (typeof validaciones != 'undefined') { %>
            <%  validaciones.forEach(validacion => { %>
        <div class="alert alert-danger" role="alert">
            <strong> <%= validacion.msg %> </strong>
        </div>
        <% }) %>
        <% } %>
        <div class="mb-3">
            <label  for="nya" class="form-label">Nombre Completo</label>
            <input id="nya" name= "nya" type="text" class="form-control"value= "<% if(typeof valores != 'undefined') { %><%= valores.nya %><%}%>">
        </div>
        <div class="mb-3">
            <label  for="email" class="form-label">Email</label>
            <input id="email" name= "email" type="text" class="form-control" value= "<% if(typeof valores != 'undefined') { %><%= valores.email %><%}%>" >
        </div>
        <div class="mb-3">
            <label  for="edad" class="form-label">Edad</label>
            <input id="edad" name= "edad" type="text" class="form-control" value= "<% if(typeof valores != 'undefined') { %><%= valores.edad %><%}%>" >
        </div>
        <div class="mb-3">
            <label  for="edad" class="form-label">ContraseÃ±a</label>
            <input id="edad" name= "password" type="password" class="form-control"  value= "<% if(typeof valores != 'undefined') { %><%= valores.password %><%}%>">
        </div>
        <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Elija una imagen</label>
            <input class="form-control"  type="file" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    </form>
</body>
</html>